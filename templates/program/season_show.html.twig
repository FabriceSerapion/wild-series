{% extends 'base.html.twig' %}

{% block body %}
	<div>
		<h1>Saison
			{{ season.number }}</h1>
		<p>{{ season.year }}</p>
		<p>{{ season.description }}</p>
		{% for episode in season.episodes %}
			<h2>{{ episode.title }}</h2>
			<p>Episode N°{{ episode.number }}</p>
			<a href="{{ path('program_episode_show', { "program_id": program.id, "season_id": season.id, "episode_id": episode.id }) }}">
				En savoir plus sur l'épisode
			</a>
		{% endfor %}
		<a href="{{ path('program_show', { id: program.id }) }}">
			Retour arrière
		</a>
	</div>
{% endblock %}
